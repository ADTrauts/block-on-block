# Multi-stage build for production server with optimized caching
# Optimized for Kaniko layer caching - layers ordered by change frequency
FROM node:20-alpine AS base

# Install pnpm globally (this layer rarely changes)
RUN npm install -g pnpm@10.11.0

# Set working directory
WORKDIR /app

# Copy package files first (these change less frequently)
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY shared/package.json ./shared/
COPY server/package.json ./server/

# Install ALL dependencies (cached unless package files change)
RUN pnpm install --frozen-lockfile

# Copy Prisma schema and build script (changes less frequently than source code)
COPY prisma/ ./prisma/
COPY scripts/build-prisma-schema.js ./scripts/build-prisma-schema.js

# Build Prisma schema from modules (REQUIRED before generate)
RUN node scripts/build-prisma-schema.js

# Generate Prisma client (cached unless schema changes)
RUN npx prisma generate

# Copy TypeScript config (rarely changes)
COPY tsconfig.json ./

# Copy shared package source (changes less frequently than server)
COPY shared/ ./shared/

# Build shared package (cached unless shared code changes)
RUN cd shared && pnpm build

# Copy server source (changes most frequently - this comes last)
COPY server/ ./server/

# Build server (this layer rebuilds when server code changes)
RUN cd server && pnpm build

# Production stage - minimal image
FROM node:20-alpine AS production

# Install pnpm
RUN npm install -g pnpm@10.11.0

# Set working directory
WORKDIR /app

# Copy package files
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY shared/package.json ./shared/
COPY server/package.json ./server/

# Install dependencies (including Prisma which is needed at runtime)
RUN pnpm install --frozen-lockfile

# Copy built shared package
COPY --from=base /app/shared/dist ./shared/dist
COPY --from=base /app/shared/package.json ./shared/

# Copy built server
COPY --from=base /app/server/dist ./server/dist
COPY --from=base /app/server/package.json ./server/

# Copy Prisma schema, modules, and build script from base stage
# CRITICAL: Must copy entire prisma directory including modules for runtime schema building
COPY --from=base /app/prisma/ ./prisma/
COPY --from=base /app/scripts/build-prisma-schema.js ./scripts/build-prisma-schema.js

# Build Prisma schema from modules (REQUIRED before generate)
# This ensures schema.prisma is up to date with all module definitions
RUN node scripts/build-prisma-schema.js

# Generate Prisma client (uses the built schema.prisma)
RUN npx prisma generate

# Create uploads directory
RUN mkdir -p /app/uploads

# Create startup script that builds schema and starts server
# Note: Server code handles migrations, but we ensure schema is built first
RUN printf '#!/bin/sh\n\
set -e\n\
echo "ðŸ“¦ Building Prisma schema from modules..."\n\
if ! node scripts/build-prisma-schema.js; then\n\
  echo "âŒ Schema build failed - starting anyway (using pre-built schema)"\n\
fi\n\
echo "âœ… Starting server..."\n\
exec node server/dist/index.js\n' > /app/start.sh && \
    chmod +x /app/start.sh

# Create non-root user
RUN addgroup -g 1001 -S nodejs
RUN adduser -S vssyl -u 1001

# Change ownership of the app directory
RUN chown -R vssyl:nodejs /app
USER vssyl

# Expose port
EXPOSE 5000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node -e "require('http').get('http://localhost:5000/api/health', (res) => { process.exit(res.statusCode === 200 ? 0 : 1) })"

# Start with migration script
CMD ["/app/start.sh"]